{
  "name": "drevops/behat-format-progress-fail",
  "type": "library",
  "description": "Behat output formatter to show progress as TAP and fails inline.",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Alex Skrypnyk",
      "email": "alex@drevops.com"
    }
  ],
  "homepage": "https://github.com/yournamespace/yourproject",
  "support": {
    "issues": "https://github.com/yournamespace/yourproject/issues",
    "source": "https://github.com/yournamespace/yourproject"
  },
  "require": {
    "behat/behat": "^3.3"
  },
  "require-dev": {
    "behat/mink": "^1.8",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "drevops/behat-phpserver": "^1",
    "squizlabs/php_codesniffer": "^3",
    "escapestudios/symfony2-coding-standard": "^3",
    "phpunit/phpunit": "^9.5",
    "symfony/process": "^5.3",
    "phpstan/phpstan": "^1.10",
    "phpmd/phpmd": "^2.14"
  },
  "autoload": {
    "psr-0": {
      "DrevOps\\BehatFormatProgressFail": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": [
      "phpcs",
      "phpmd --exclude vendor,vendor-bin,node_modules . text phpmd.xml",
      "phpstan"
    ],
    "lint:fix": "phpcbf",
    "test": "phpunit --no-coverage",
    "test:coverage": "XDEBUG_MODE=coverage phpunit",
    "build": [
      "@composer bin box require --dev humbug/box",
      "box validate",
      "box compile"
    ]
  }
}
